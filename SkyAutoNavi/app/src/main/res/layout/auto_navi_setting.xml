<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/auto_dimen2_28"
    android:layout_marginLeft="@dimen/auto_dimen2_28"
    android:layout_marginRight="@dimen/auto_dimen2_28"
    android:layout_marginTop="@dimen/auto_dimen2_28"
    android:background="@drawable/auto_bg_out_sytle_day"
    android:orientation="horizontal"
    android:padding="@dimen/auto_dimen2_2">

    <LinearLayout
        android:layout_width="@dimen/auto_dimen2_80"
        android:layout_height="fill_parent"
        android:background="@color/auto_color_586c7f_10"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/auto_setting_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/auto_dimen2_20"
            android:paddingTop="@dimen/auto_dimen2_20">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/auto_ic_back_selector" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/auto_dimen2_1"
            android:layout_marginLeft="@dimen/auto_dimen2_15"
            android:layout_marginRight="@dimen/auto_dimen2_15"
            android:background="@color/auto_color_c0ccdc" />

        <com.autonavi.framework.widget.GeneralScrollBtnBar
            android:id="@+id/setting_scroll_bar"
            android:layout_width="@dimen/auto_dimen2_80"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/auto_dimen2_1"
        android:layout_height="fill_parent"
        android:background="@color/auto_color_c0ccdc" />

    <LinearLayout
        android:id="@+id/middle_space"
        android:layout_width="@dimen/auto_dimen2_24"
        android:layout_height="fill_parent"
        android:orientation="horizontal" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="@dimen/auto_dimen2_18"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/auto_ns_along_way_search_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/auto_dimen2_12" />

            <include
                layout="@layout/auto_ns_navi_preference_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/auto_ns_broadcast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/auto_ns_traffic_overview_mode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/auto_dimen2_24" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>